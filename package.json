{
  "name": "wechat-ai-assistant",
  "version": "1.0.0",
  "description": "微信消息管理与AI助手桌面应用 - WeChat Message Manager & AI Assistant Desktop Application",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "server": "node src/server/index.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "wechat",
    "ai",
    "assistant",
    "desktop",
    "electron",
    "ollama",
    "openai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-schedule": "^2.1.1",
    "socket.io": "^4.6.2",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.wechat.ai-assistant",
    "productName": "微信AI助手",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  }
}
